<%- include('../partials/head') %>
    <%- include('../partials/header') %>

    <main>
        <article class="articulo">
                <img src="/images/products/<%= product.avatar %>">
        </article>
        <div>
            <h1><%= product.name %></h1>
            <h3>Precio Unitario: <%= product.price %></h3>
            <p><%= product.description %></p>
            <div>
                <form method="POST" action="/products/cart/add/<%= product.id %>">
                    <button class="boton" type="submit">COMPRAR</button>
                </form>
                <% if (locals.user.admin) { %>
                    <a href="../edit/<%= product.id %>"><button class= "boton">EDITAR</button></a>
                <% } %>
                
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
