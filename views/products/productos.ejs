<%- include('../partials/head') %>
    <%- include('../partials/header') %>
        <div class="add-products">
            <a href="/products/add"><p>Agregá más productos</p></a>
        </div>
    <main class="mtopbottom-10 bg-main radius-10 p-20 sombra">
        <div class="titulo">
            <p>OFERTAS:</p>
        </div>
        <section class="d-flex flex-wrap">
            <% for (product of products) { %>
                <article class="contenedor-producto sombra">
                    <div class="producto">
                        <a href="/products/detalle/<%= product.id %>">
                            <img src ='/images/products/<%= product.avatar %>' alt = ""/>

                        <div class="van">
                            <p class="precio-producto">$ <%= product.precio %></p>
                            <i class="fas fa-shuttle-van van borde"></i>
                        </div>
                        <div>
                            <p class="descripcion-producto"><%= product.nombre %></p>       
                        </div>
                        </a>
                    </div>
                </article>
                <% } %>
        </section>
        <section class="formas-de-pago">
            <div class="sombra d-flex">
                <a href = '/'><i class="fas fa-credit-card footer-images borde"></i>Pagá con tarjeta</a>
                <a href = '/'><i class="far fa-handshake borde"></i>MercadoPago</a>
                <a href = '/'><i class="far fa-money-bill-alt"></i>En efectivo</a>
            </div>
        </section>
    </main>

    <%- include('../partials/footer') %>