<%- include('../partials/head') %>
    <%- include('../partials/header') %>

    <main>
      <h1>Agrega productos:</h1>
      <form method="POST" action="/products/add" enctype="multipart/form-data">
        <p><label>Nombre:</label><input type="text" id="nombre" name="nombre" placeholder="Nombre del producto"></p>
        <p><label>Categoría:</label><input type="text" id="categoria" name="categoria" placeholder="Categoria"></p>
        <p><label>Descripción:</label><input type="text" id="descripcion" name="descripcion" placeholder="Descripción del producto"></p>
        <p><label>Marca:</label><input type="text" id="marca" name="marca" placeholder="Marca"></p>
        <p><label>Precio:</label><input type="text" id="precio" name="precio" placeholder="Precio"></p>
        <p><label>Stock:</label><input type="text" id="stock" name="stock" placeholder="Stock"></p>
        <label>Imagen:</label><input type="file" id="avatar" name="avatar">
        <div class="form-buttons">
          <button type="submit">Agregar</button>
          <button type="reset">Cancelar</button>
        </div>
      </form>
    </main>

    <%- include('../partials/footer') %>