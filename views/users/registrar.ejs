<%- include('../partials/head') %>
    <%- include('../partials/header') %>

    <main>
      <h1>Crea tu cuenta de usuario:</h1>

      <% if (typeof errors != "undefined"){ %>
        <ul>
          <% for (e of errors) { %>
            <li><%= e %></li>
          <% } %> 
        </ul>
      <% } %> 

      <form action="/auth/registrar" method="POST">
        <p><input type="text" id="first_name" name="first_name" placeholder="Nombre" required></p>
        <p><input type="text" id="last_name" name="last_name" placeholder="Apellido" required></p>
        <p><input type="email" id="email" name="email" placeholder="Email" required></p>
        <p><input type="password" id="password" name="password" placeholder="Contrase&ntilde;a" required></p>
        <p><input type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirmar contrase&ntilde;a" required></p>
        <p><button type="submit">Registrar</button>
        <button type="reset">Cancelar</button></p>
      </form>
    </main>

    <%- include('../partials/footer') %>